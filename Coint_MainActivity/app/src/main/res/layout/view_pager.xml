<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/chartListView" />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:onClick="bestClick">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/webtoonImg"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="StarScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starScore"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

        <TextView
            android:text="artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistName"
            android:textSize="10dp"
            android:layout_marginStart="33dp"
            android:layout_below="@+id/webtoonName"
            android:layout_toEndOf="@+id/webtoonImg" />

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webtoonName"
            android:textSize="15dp"
            android:layout_alignTop="@+id/webtoonImg"
            android:layout_alignStart="@+id/artistName" />

        <TextView
            android:text="1"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/rankTop"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/artistName"
            android:layout_toEndOf="@+id/webtoonImg" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle"
        android:onClick="bestClick">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/webtoonImg1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="StarScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starScore1"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

        <TextView
            android:text="artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistName1"
            android:textSize="10dp"
            android:layout_marginStart="33dp"
            android:layout_below="@+id/webtoonName1"
            android:layout_toEndOf="@+id/webtoonImg1" />

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webtoonName1"
            android:textSize="15dp"
            android:layout_alignTop="@+id/webtoonImg1"
            android:layout_alignStart="@+id/artistName1" />

        <TextView
            android:text="1"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/rankMiddle"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/artistName1"
            android:layout_toEndOf="@+id/webtoonImg1" />

    </RelativeLayout> <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bottom"
    android:onClick="bestClick">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/webtoonImg2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:text="StarScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starScore2"
        android:textSize="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />

    <TextView
        android:text="artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistName2"
        android:textSize="10dp"
        android:layout_marginStart="33dp"
        android:layout_below="@+id/webtoonName2"
        android:layout_toEndOf="@+id/webtoonImg2" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webtoonName2"
        android:textSize="15dp"
        android:layout_alignTop="@+id/webtoonImg2"
        android:layout_alignStart="@+id/artistName2" />

    <TextView
        android:text="1"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/rankBottom"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/artistName2"
        android:layout_toEndOf="@+id/webtoonImg2" />

</RelativeLayout>
</LinearLayout>