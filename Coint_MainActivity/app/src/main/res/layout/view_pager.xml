<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/chartListView" />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/webtoonImg"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="StarScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starScore"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

        <TextView
            android:text="artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistName"
            android:textSize="15dp"
            android:layout_marginStart="11dp"
            android:layout_below="@+id/webtoonName"
            android:layout_toEndOf="@+id/webtoonImg" />

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webtoonName"
            android:textSize="20dp"
            android:layout_alignTop="@+id/webtoonImg"
            android:layout_alignStart="@+id/artistName" />

    </RelativeLayout>

