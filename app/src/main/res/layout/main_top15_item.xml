<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/webtoonImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/splash_mdpi" />

        <TextView
            android:id="@+id/starScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:text="StarScore"
            android:textColor="#5F5F5F"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/webtoonName"
            android:layout_marginStart="33dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/webtoonImg"
            android:text="artist"
            android:textColor="#5F5F5F"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/rankTop"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/artistName"
            android:layout_toEndOf="@+id/webtoonImg"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#5F5F5F"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/addTopBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:onClick="onClick"
            android:src="@drawable/main_addmark" />

        <TextView
            android:id="@+id/webtoonName"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/artistName"
            android:layout_alignTop="@+id/webtoonImg"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="2"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="Name"
            android:textColor="#5F5F5F"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick">

        <TextView
            android:id="@+id/rankMiddle"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/artistName1"
            android:layout_toEndOf="@+id/webtoonImg1"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#5F5F5F"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/addMidBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:onClick="onClick"
            android:src="@drawable/main_addmark" />

        <ImageView
            android:id="@+id/webtoonImg1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/addMidBtn"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/splash_mdpi" />

        <TextView
            android:id="@+id/starScore1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:text="StarScore"
            android:textColor="#5F5F5F"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/artistName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/webtoonName1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/rankMiddle"
            android:text="artist"
            android:textColor="#5F5F5F"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/webtoonName1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/artistName1"
            android:layout_alignTop="@+id/webtoonImg1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="2"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="Name"
            android:textColor="#5F5F5F"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/webtoonImg2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/splash_mdpi" />

        <TextView
            android:id="@+id/starScore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:text="StarScore"
            android:textColor="#5F5F5F"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/artistName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/webtoonName2"
            android:layout_marginStart="33dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/webtoonImg2"
            android:text="artist"
            android:textColor="#5F5F5F"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/addBotBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:onClick="onClick"
            android:src="@drawable/main_addmark" />

        <TextView
            android:id="@+id/rankBottom"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/artistName2"
            android:layout_toEndOf="@+id/webtoonImg2"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#5F5F5F"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/webtoonName2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/artistName2"
            android:layout_alignTop="@+id/webtoonImg2"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="2"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="Name"
            android:textColor="#5F5F5F"
            android:textSize="15dp" />

    </RelativeLayout>
</LinearLayout>