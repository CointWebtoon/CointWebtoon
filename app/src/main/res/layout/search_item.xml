<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="0.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="0dp">

        <ImageView
            android:id="@+id/webtoonImg"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/webtoonName"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/webtoonImg"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="2"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/D2Gray"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/webtoonName"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="artist"
            android:textColor="@color/D2Gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/starScore"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@id/artistName"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="9.99"
            android:textColor="@android:color/holo_red_light"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/addWebtoon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/main_addmark" />
    </RelativeLayout>
</RelativeLayout>