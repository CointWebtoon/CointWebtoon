<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/webtoonImg"
                android:layout_width="120dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/webtoonName"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/webtoonImg"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="2"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/D2Gray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artistName"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_below="@+id/webtoonName"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="artist"
                android:textColor="@color/D2Gray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/starScore"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_below="@id/artistName"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="9.99"
                android:textColor="@android:color/holo_red_light"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/addWebtoon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:src="@drawable/main_addmark" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:id="@+id/search_adult"
                android:textColor="@color/D2Light"
                android:textSize="9sp"
                android:layout_marginLeft="3dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_below="@+id/search_cuttoon"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:id="@+id/search_cuttoon"
                android:textColor="@color/D2Light"
                android:textSize="9sp"
                android:layout_marginLeft="3dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_below="@+id/search_update"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:id="@+id/search_update"
                android:gravity="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="9sp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>