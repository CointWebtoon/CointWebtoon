<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/team_picture"
        android:src="@drawable/team_picture"
        android:layout_width="120dp"
        android:layout_height="160dp" />

    <TextView
        android:textStyle="bold"
        android:layout_alignLeft="@id/team_picture"
        android:layout_below="@id/team_picture"
        android:text="COINT"
        android:textSize="40dp"
        android:layout_width="120dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/members"
        android:layout_toRightOf="@id/team_picture"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="210dp">

        <ImageView
            android:layout_below="@id/members"
            android:layout_above="@id/team_picture"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/splash"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="최은주"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="박종원"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="손석희"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="신정민"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>