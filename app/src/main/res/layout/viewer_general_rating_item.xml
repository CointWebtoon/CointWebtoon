<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mylayout">

    <RatingBar android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        />

    <Button android:id="@+id/giving_star"
        android:onClick="givingStarBtnClick"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별점주기"
        />

    <TextView
        android:id="@+id/textview_starScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF69B4"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/rating_bar" />
    <TextView
        android:id="@+id/mentionTitle"
        android:layout_below="@id/rating_bar"
        android:text="작가의 말"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/mention"
        android:layout_below="@id/mentionTitle"
        android:text="작가의 말을 적어보았습니다."
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/mention_coint"

        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/mention"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/mention_coint"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>