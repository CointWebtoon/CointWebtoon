<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAAAAA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#23C382"
        android:orientation="vertical">

        <TextView
            android:id="@+id/intentText"
            android:layout_width="300dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/main_round"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#5F5F5F"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/genre_titlebar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#DAA520"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="코믹"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/daily"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="일상"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/pure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="순정"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/thrill"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="스릴러"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fantasy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="판타지"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="역사"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/drama"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="드라마"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/sports"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="스포츠"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="액션"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/sensibility"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="감성"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/brandetc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:onClick="genreFlipItemClick"
                android:padding="10dp"
                android:text="기타"
                android:textColor="@color/D2Gray"
                android:textSize="15dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <GridView
        android:id="@+id/genre_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="3dp"
        android:numColumns="3"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:verticalSpacing="3dp" />
</LinearLayout>