<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.kwu.cointwebtoon.ViewerCutActivity">

    <ViewFlipper android:id="@+id/viewflipper"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </ViewFlipper>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toptoolbar"
        android:background="#333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewer_actionbar_height"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button android:id="@+id/gotoepi"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:background="@drawable/view_button_state_bback"
                android:onClick="BackBtn"/>
            <TextView android:id="@+id/CutToonTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="BackBtn"
                android:text="웹툰 제목"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:layout_toRightOf="@+id/gotoepi"
                android:textColor="#FFFFFF"
                />
            <ImageButton android:id="@+id/jung"
                android:background="#333333"
                android:onClick="runButtonClick"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/run_inactive"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
            <ImageButton android:id="@+id/viewer_timer"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/jung"
                android:scaleType="fitCenter"
                android:src="@drawable/viewer_defaultset"
                android:onClick="timerClick"
                android:background="#333333"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottomtoolbar"
        android:background="#333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewer_actionbar_height"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">
            <Button android:id="@+id/good"
                android:gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/view_button_state_good"
                android:layout_weight="0.01"
                android:onClick="HeartBtn"/>
            <TextView android:id="@+id/count_txt"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 좋아요수  "
                android:onClick="HeartBtn"
                android:textColor="#FFFFFF"
                android:background="@drawable/textview_color"
                android:layout_weight="0.09"/>
            <Button android:id="@+id/datgule"
                android:gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/view_button_state_dat"
                android:onClick="Dat"
                android:layout_weight="0.02"/>
            <TextView android:id="@+id/count_txt2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="  댓글 수  "
                android:background="@drawable/textview_color"
                android:onClick="Dat"
                android:textColor="#FFFFFF"
                android:layout_weight="0.08"/>

            <Button
                android:id="@+id/before"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/view_button_state_previous"
                android:gravity="center"
                android:onClick="Previous" />

            <TextView android:id="@+id/current_pos"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="현재회차"
                android:background="@drawable/textview_color"
                android:textColor="#FFFFFF"
                android:onClick="Current"
                android:layout_weight="0.2"/>
            <Button android:id="@+id/next"
                android:gravity="center"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/view_button_state_nnext"
                android:onClick="Next"
                android:layout_weight="0.2"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>