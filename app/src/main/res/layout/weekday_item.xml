<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <com.kwu.cointwebtoon.Views.CircularView
        android:id="@+id/circular"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:focusable="false"
        >
        <com.daimajia.swipe.SwipeLayout
            xmlns:swipe="http://schemas.android.com/apk/res-auto"
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            swipe:leftEdgeSwipeOffset="0dp"
            swipe:rightEdgeSwipeOffset="0dp"
            android:focusable="false">

            <LinearLayout
                android:id="@+id/week_my"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:focusable="false"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="10dp"
                android:background="@drawable/week_background_menu">

                <ImageButton
                    android:id="@+id/btn_my"
                    android:layout_width="56dp"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:background="@drawable/my_release"
                    android:focusable="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="MY"
                    android:textColor="@color/D2Gray"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/week_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:focusable="false"
                >
                <ImageView
                    android:id="@+id/iv_thumbnail"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginStart="2.5dp"
                    android:layout_marginTop="7.5dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_starPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"

                            android:text="â˜… "
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_update_icon"
                            android:layout_marginRight="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="9sp"

                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            />

                        <TextView
                            android:id="@+id/tv_toontype_icon"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="9sp"
                            android:textColor="@color/D2Light"

                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_artist"
                            android:layout_marginRight="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Artist"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tv_adult_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="9sp"

                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            />
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

        </com.daimajia.swipe.SwipeLayout>
    </com.kwu.cointwebtoon.Views.CircularView>
</layout>