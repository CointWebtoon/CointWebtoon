<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mylayout"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cut_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작가의 말"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cut_mention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <RatingBar
                android:id="@+id/cut_rating_bar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:isIndicator="true"
                android:numStars="5" />
            <TextView
                android:id="@+id/cut_starScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="현재 별점"
                android:textColor="#FF69B4" />
            <Button
                android:id="@+id/cut_giving_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/view_button_state_confirm"
                android:onClick="cut_givingStarBtnClick"
                android:text="별점주기" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>