<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kwu.cointwebtoon.MainActivity"
    tools:showIn="@layout/main_app_bar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="10dp"
        android:weightSum="4">
        <!--장르별, 작가별, 요일별, 베도, 설정 부분-->

        <ImageView
            android:id="@+id/genreBtn"
            android:layout_width="80dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="@color/D2Gray"
            android:onClick="onClick"
            android:src="@drawable/main_brown" />

        <ImageView
            android:id="@+id/artistBtn"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="@color/D2Gray"
            android:onClick="onClick"
            android:src="@drawable/main_sally" />

        <ImageView
            android:id="@+id/weekdayBtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="@color/D2Gray"
            android:onClick="onClick"
            android:src="@drawable/main_cony" />

        <ImageView
            android:id="@+id/bestBtn"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="@color/D2Gray"
            android:onClick="onClick"
            android:src="@drawable/main_leonard" />

    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginBottom="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_weight="8.4"
        android:orientation="vertical"
        android:background="@drawable/main_shelf"
        android:weightSum="1">
        <!--즐겨찾는 웹툰 추가하는 부분-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.38"
            android:clipToPadding="false"
            android:paddingBottom="1dp"
            android:scrollbars="none" />
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginBottom="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="조회수 Top 15"
                android:textColor="#5F5F5F"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginBottom="1dp" />

        <!--Top 15 띄우는 부분-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

    </LinearLayout>

</LinearLayout>
